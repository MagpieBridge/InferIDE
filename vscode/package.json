{
	"name": "inferide",
	"description": "A language server for facebook Infer",
	"author": "Linghui Luo",
	"license": "EPL-2.0",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": ""
	},
	"publisher": "LinghuiLuo",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.30.0"
	},
	"activationEvents": [
		"onLanguage:java"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"title": "InferIDE Setting",
			"properties": {
				"InferIDE.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"InferIDE.auto":{
					"scope": "window",
					"type": "boolean",
					"default":true,
					"description": "Specifies if infer should be ran automatically when the user is idle."
				},
				"InferIDE.timeout":{
					"scope": "window",
					"type": "integer",
					"default": 5,
					"description": "Specifies the time to wait for idle when InferIDE.auto is enabled."
				}	
			}
			
		}
	},
	"scripts": {
		"vscode:prepublish": "cp ../target/inferIDE-0.0.1.jar inferIDE-0.0.1.jar && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1"
	},
	"devDependencies": {
		"vscode": "^1.1.33",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.13.0",
		"tslint": "^5.15.0",
		"typescript": "^3.4.2"
	}
}
